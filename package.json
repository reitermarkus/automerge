{
  "name": "automerge",
  "version": "0.0.0",
  "private": true,
  "description": "Automatically merge pull requests once they are approved and required status checks are passing.",
  "main": "lib/main.js",
  "scripts": {
    "build": "npm run codegen && tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reitermarkus/automerge.git"
  },
  "keywords": [
    "actions",
    "pull request",
    "merge"
  ],
  "author": "Markus Reiter <me@reitermark.us>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3",
    "ts-is-present": "^1.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.4",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-document-nodes": "^2.2.13",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.1",
    "@octokit/graphql-schema": "^10.74.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.5",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.19.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.5.3",
    "graphql": "^16.5.0",
    "jest": "^28.1.2",
    "jest-circus": "^28.1.2",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
