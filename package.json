{
  "name": "automerge",
  "description": "Automatically merge pull requests once they are approved and required status checks are passing.",
  "version": "0.0.0",
  "author": "Markus Reiter <me@reitermark.us>",
  "private": true,
  "homepage": "https://github.com/reitermarkus/automerge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reitermarkus/automerge.git"
  },
  "bugs": {
    "url": "https://github.com/reitermarkus/automerge/issues"
  },
  "keywords": [
    "actions",
    "pull request",
    "merge"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "codegen": "npx graphql-codegen --config src/codegen.ts",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npm run codegen && npx eslint . -c .github/linters/.eslintrc.yml",
    "package": "npm run codegen && ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npm run codegen && jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coveragePathIgnorePatterns": [
      "./src/codegen/"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "ts-is-present": "^1.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.4",
    "@graphql-codegen/typescript-document-nodes": "^4.0.4",
    "@graphql-codegen/typescript-operations": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.0.4",
    "@octokit/graphql-schema": "^14.58.0",
    "@octokit/types": "^13.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsonc": "^2.15.0",
    "eslint-plugin-prettier": "^5.1.3",
    "graphql": "^16.8.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
