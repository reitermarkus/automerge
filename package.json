{
  "name": "automerge",
  "version": "0.0.0",
  "private": true,
  "description": "Automatically merge pull requests once they are approved and required status checks are passing.",
  "main": "lib/main.js",
  "scripts": {
    "build": "npm run codegen && tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reitermarkus/automerge.git"
  },
  "keywords": [
    "actions",
    "pull request",
    "merge"
  ],
  "author": "Markus Reiter <me@reitermark.us>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.5.0",
    "@actions/github": "^4.0.0",
    "ts-is-present": "^1.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/typescript": "^2.1.2",
    "@graphql-codegen/typescript-document-nodes": "^2.1.3",
    "@graphql-codegen/typescript-operations": "^2.1.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.0",
    "@octokit/graphql-schema": "^10.67.0",
    "@octokit/openapi-types": "^10.1.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vercel/ncc": "^0.30.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.2.0",
    "eslint-plugin-jest": "^24.4.0",
    "graphql": "^15.8.0",
    "jest": "^26.6.3",
    "jest-circus": "^27.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  }
}
